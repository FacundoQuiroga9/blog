<!-- contact.html.erb -->
<div class="container contact-page">
  <h1 class="my-5">Contacto</h1>

  <div class="row justify-content-center">
    <!-- Formulario de contacto -->
    <div class="col-md-6">
      <%= form_with model: @contact, local: true, html: { class: "contact-form" } do |form| %>
        <div class="form-group">
          <%= form.label :name, "Nombre" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :email, "Correo electrónico" %>
          <%= form.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :message, "Mensaje" %>
          <%= form.text_area :message, class: "form-control", rows: 6 %>
        </div>
        <div class="form-group">
          <%= form.submit "Enviar", class: "btn btn-olsc" %>
        </div>
      <% end %>
    </div>

    <!-- Información de contacto -->
    <div class="col-md-6 social-media-container">
      <h3>REDES SOCIALES</h3>
      <a href="https://www.facebook.com/olsc.ba" aria-label="Facebook" target="_blank">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="https://www.instagram.com/olsc_ba/" aria-label="Instagram" target="_blank">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="https://twitter.com/OLSC_BA" aria-label="X" target="_blank">
          <i class="fa-brands fa-x-twitter"></i>
        </a>
        <a href="https://www.youtube.com/@olscbuenosaires8770" aria-label="YouTube" target="_blank">
          <i class="fab fa-youtube"></i>
        </a>
        <a href="mailto:contact@example.com" aria-label="Email">
          <i class="fas fa-envelope"></i>
        </a>
    </div>
  </div>


</div>
