<div class="container mt-5">
  <div class="row d-flex justify-content-between">
    <div class="col">
      <h1>Calendario</h1>
    </div>
    <div class="col d-flex justify-content-end">
      <%= link_to 'Nuevo partido', new_match_path, class: 'btn btn-olsc my-3' %>
    </div>


  </div>

  <%= month_calendar(events: @matches, start_time: :date, param_name: :start_date) do |date, matches| %>
    <div class="calendar-day h-100">
      <%= date.day %>
      <% matches.each do |match| %>
        <%= link_to match_path(match), class: "mini-card-link d-flex justify-content-center" do %>
          <div class="mini-card text-center">
            <% if match.date.past? %>
              <div class="card-info d-flex justify-content-center align-items-center">
                <div class="row w-100">
                  <div class="col-4 p-0">
                    <%= image_tag "logo-vertical.png", alt: "Liverpool logo", class: "img-fluid team-logo" %>
                  </div>
                  <div class="col-4 p-0 d-flex justify-content-center align-items-center">
                    <div class="match-result d-inline-block mx-2">
                      <%= match.result %>
                    </div>
                  </div>
                  <div class="col-4 p-0">
                    <%= image_tag "generic.png", alt: "Opponent logo", class: "img-fluid team-logo" %>
                    <div class="team-name mt-1">
                      <%= match.rival %>
                    </div>
                  </div>

                  </div>
                </div>



            <% else %>
              <div class="card-info d-flex justify-content-center align-items-center">
                <div class="row w-100">
                  <div class="col-4 p-0">
                    <%= image_tag "logo-vertical.png", alt: "Liverpool logo", class: "img-fluid team-logo" %>
                  </div>
                  <div class="col-4 p-0 d-flex justify-content-center align-items-center">
                    <div class="match-result d-inline-block mx-2">
                      VS
                    </div>
                  </div>
                  <div class="col-4 p-0">
                    <%= image_tag "generic.png", alt: "Opponent logo", class: "img-fluid team-logo" %>
                    <div class="team-name mt-1">
                      <%= match.rival %>
                    </div>
                  </div>

                  </div>
                </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
