
    <h2><%= @post.title %></h2>
    <p><%= @post.content %></p>
    <p>Publicado el: <%= @post.created_at.strftime("%d/%m/%Y") %></p>
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary"%>
    <%= link_to "Delete",
      post_path(@post),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class: "btn btn-danger"
    %>
