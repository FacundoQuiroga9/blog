<h1>Lista de Posts</h1>
 <% if user_signed_in? %>
<%= link_to "Crear Nuevo Post", new_post_path, class: "btn btn-primary" %>
<% end %>
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <%= image_tag 'img-placeholder.jpeg', class: "card-img-top", alt: "Imagen de marcador de posiciÃ³n" %>
          <div class="card-body">
            <p class="card-text"><%= post.title %></p>
            <p>Publicado por <%= post.user.username %> el <%= post.created_at.strftime("%d/%m/%Y") %></p>
            <%= link_to "Leer", post_path(post), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
