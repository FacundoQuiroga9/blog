
<div class="container">
  <div class="row align-items-center">
    <div class="col-6">
      <h1 class="my-5">Bienvenido</h1>
    </div>

 <% if user_signed_in? %>
 <div class="col-6 d-flex justify-content-end">
  <%= link_to "Publicar", new_post_path, class: "btn btn-danger" %>
 </div>
<% end %>
  </div>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-3 mb-4">
      <div class="card">
        <%= link_to post_path(post), class: "card-link" do %>
          <%= image_tag 'img-placeholder.jpeg', class: "card-img-top", alt: "Imagen de marcador de posiciÃ³n" %>
          <div class="card-body">
            <p class="card-text fw-bold fs-5"><%= post.title %></p>
            <p>Publicado por <%= post.user.username %> el <%= post.created_at.strftime("%d/%m/%Y") %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
