<div class="container">
  <h1 class="my-5">El equipo</h1>
  <div class="row">
    <div class="col-7">
      <h4>Jugadores</h4>
      <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Edad</th>
        <th>Partidos</th>
        <th>Goles</th>
        <th>Año de debut</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.name %></td>
          <td><%= player.birthday %></td>
          <td><%= player.games %></td>
          <td><%= player.goals %></td>
          <td><%= player.debut %></td>
          <td><%= link_to 'Detalles', player %></td>
          <td><%= link_to 'Editar', edit_player_path(player) %></td>
          <td><%= link_to "Eliminar",
                player_path(player),
                data: { turbo_method: :delete, turbo_confirm: "Estás seguro?" }%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
    </div>
    <div class="col-5">
      <h4>Ultimos partidos</h4>
    </div>
  </div>
  <br>

  <%= link_to 'Nuevo jugador', new_player_path %>

</div>
